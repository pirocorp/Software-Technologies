@model TeisterMask.Models.Task

@{
	ViewBag.Title = "Edit Task";
}

<header>
	<h3>Edit Task</h3>
</header>

@using (Html.BeginForm("Edit", "Task", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div>
		<label class="desc" for="title">Title</label>
		<div>
			<input id="title" name="title" type="text" class="field text fn" value="@Model.Title" size="8" tabindex="1" autofocus>
		</div>
	</div>

    <div>
        @Html.LabelFor(m => m.Status)
        <div>
            @Html.EnumDropDownListFor(m => m.Status, new {@class = "styled-select" })
        </div>
    </div>

	<div>
		<div>
			<input class="button" type="submit" value="Submit">
			<a class="button cancel" href="/">Cancel</a>
		</div>
	</div>
}